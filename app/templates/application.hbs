{{page-title "DearthFunk"}}
<div class="blender-animation {{if this.loading 'loading'}}"></div>
<div class="application {{if this.loading 'loading'}}" {{did-resize this.didResize}}>
  <Canvas width={{this.width}} height={{this.height}}/>
  <div class="left">
    <Animations @loading={{this.loading}}/>
  </div>
  <div class="body">
    <Info @loading={{this.loading}}/>
  </div>
  <div class="right">
    <AnimationControls/>
  </div>
</div>
